@using dojo_survey.Models;
@model Survey;

<div class="card">
    <div class="card-header bg-primary text-light text-center lead">
        Tell us a little about yourself:
    </div>
    <div class="card-body">
    <form action="/survey" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Name">
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Age:</label>
            <div class="col-sm-10">
                <input class="form-control" type="number" name="Age">
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Hometown:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Hometown">
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Favorite Food:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Food">
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Favorite Song:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Song">
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Fun Fact:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Funfact">
            </div>
        </div>
        <div class="text-center">

            <input type="submit" class="btn btn-info" value="Submit">
        </div>

    </form>

    </div>
</div>


